pipeline {

  agent any
  stages {
    stage('Initialize'){
        steps{
        def dockerHome = tool 'docker-cli-latest'
        env.PATH = "${dockerHome}/bin:${env.PATH}"
        }
    }
    stage('Cloning Git') {
      steps {
        git([url: 'https://github.com/taniarascia/takenote.git', branch: 'master'])

      }
    }
    stage('Building image') {
      steps{
        script {
          sh 'docker build -t takenote:mytag .'
        }
      }
    }
  }
}
